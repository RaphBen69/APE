---
import { getCollection } from 'astro:content';

import BaseLayout from '../layouts/BaseLayout.astro';

import ContactCTA from '../components/ContactCTA.astro';
import PartnersPreview from '../components/PartnersPreview.astro';
import Hero from '../components/Hero.astro';
import Grid from '../components/Grid.astro';

const partners = (await getCollection('partners')).sort(
	(a, b) => b.data.publishDate.valueOf() - a.data.publishDate.valueOf()
);
---

<BaseLayout
	title="Le bureau | APE"
	description="L'équipe qui compose le bureau"
>
	<div class="stack gap-20">
		<main class="wrapper stack gap-8">
			<Hero
				title="Le bureau"
				tagline="Voici l'équipe qui compose le bureau"
				align="start">
				<center>
					<img
						width="800"
						height="400"
						src="/APE/assets/team1.png"
						alt="Equipe du bureau img 1"
					/>
					<img
						width="800"
						height="400"
						src="/APE/assets/team2.png"
						alt="Equipe du bureau img 2"
					/>
				</center>
				<p>
					N'hésitez à venir nous parler si vous avez des questions, des remarques ou des idées.
				</p>
			</Hero>			
		</main>
		<ContactCTA />
	</div>
</BaseLayout>
